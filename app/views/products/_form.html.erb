<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :code %>

    <%= f.input :price %>

    <%= f.association :supplier %>

    <%= f.association :category %>

    <%= f.input :amount %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
