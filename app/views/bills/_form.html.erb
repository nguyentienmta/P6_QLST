<%= simple_form_for(@bill) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.association :customer %>

    <%= f.association :employee %>

    <%= f.input :bill_date %>

    <%= f.input :total_amount %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
